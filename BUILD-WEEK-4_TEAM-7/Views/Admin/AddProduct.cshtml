@model AddProductModel

@{
	ViewData["Title"] = "AddProduct";
}

<h3>ADD A NEW PRODUCT</h3>

<form method="post" asp-controller="Admin" asp-action="CreateProduct" class="form-control">
	<p class="form-label">Product Name</p>
	<input type="text" asp-for="Name" class="form-control" />
	<p class="form-label">Short Description</p>
	<input type="text" asp-for="Descrition" class="form-control
	<p class="form-label">Description</p>
	<textarea asp-for="DescriptionExtra" class="form-control"></textarea>
	<p class="form-label">Price</p>
	<input type="number" asp-for="Price" class="form-control" />
	<p class="form-label">Stock</p>
	<input type="number" asp-for="Stock" class="form-control" />
	<p class="form-label">Image URl</p>
	<input type="text" asp-for="ImageURL" class="form-control" />
	<p class="form-label">Category</p>

	<select asp-for="IdCategory" class="form-control">
		@{
			var index = 0;

			foreach (var categories in Model.Categories)
			{
				index++;
				<option value="@index">@categories.CategoryName</option>
			}
		}
	</select>
	<button type="submit" class="btn btn-primary">ADD</button>
</form>