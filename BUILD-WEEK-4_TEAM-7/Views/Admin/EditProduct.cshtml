@model EditProductModel

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form class="form-control" asp-action="UpdateProduct" method="post">
    <input type="hidden" asp-for="IdProduct" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-white"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-white"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescriptionExtra" class="control-label"></label>
        <textarea asp-for="DescriptionExtra" class="form-control"></textarea>
        <span asp-validation-for="DescriptionExtra" class="text-white"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-white"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageURL" class="control-label"></label>
        <input asp-for="ImageURL" class="form-control" />
        <span asp-validation-for="ImageURL" class="text-white"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock" class="control-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-white"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdCategory" class="control-label">Category</label>
        <select asp-for="IdCategory" class="form-control" asp-items="@(new SelectList(Model.Categories, "IdCategory", "CategoryName"))"></select>
        <span asp-validation-for="IdCategory" class="text-white"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary mt-3" />
        <a asp-action="Admin" class="btn btn-secondary mt-3">Cancel</a>
    </div>
</form>
